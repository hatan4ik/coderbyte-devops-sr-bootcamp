# This JSON file defines an alerting policy for high CPU utilization.
# This file can be used with the `gcloud alpha monitoring policies create` command.

{
  "displayName": "High CPU Utilization on GCE Instance",
  "combiner": "OR",
  "conditions": [
    {
      "displayName": "CPU Utilization > 80% for 5 minutes",
      "conditionThreshold": {
        "filter": "metric.type=\"compute.googleapis.com/instance/cpu/utilization\" resource.type=\"gce_instance\"",
        "comparison": "COMPARISON_GT",
        "thresholdValue": 0.8,
        "duration": "300s",
        "trigger": {
          "count": 1
        }
      }
    }
  ],
  "documentation": {
    "content": "CPU utilization on instance ${metric.label.instance_name} has exceeded 80% for 5 minutes. First responders should SSH into the instance to investigate.",
    "mimeType": "text/markdown"
  },
  "notificationChannels": [
    # Replace this with the full name of your notification channel.
    # You can get this by running:
    # gcloud alpha monitoring channels list
    # Example: \"projects/your-project-id/notificationChannels/123456789\"
    "projects/gcp-hero-lab-01/notificationChannels/YOUR_CHANNEL_ID"
  ]
}

